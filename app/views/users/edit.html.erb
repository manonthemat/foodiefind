<div class = "row">
  <div class="col-xs-4 col-xs-offset-4 form-container">
    <h1>edit the fields you wish to change</h1>

      <%= form_for @user, {url: user_path, method: :patch} do |f| %>

      <div class="form-group">
        <%= f.text_field :name, placeholder:"Name goes here..." %>
      </div>
      <div class="form-group">
        <%= f.text_field :email, placeholder:"Email goes here..." %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder:"new password?" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder:"confirm new password..." %>
      </div>

      <div class="form-group">
        <%= select_tag "user[user_type]", options_for_select(["foodie", "truck owner"]) %>
      </div>

      <div class="form-group btn-toolbar">
        <%= f.submit "update me!", method: :patch, class: 'btn btn-primary btn-large'%>
        <%= link_to "delete me instead!", :user, method: :delete, data: { confirm: "really #{@user.name.upcase}? you're leaving us???"}, class: 'btn btn-primary pull-right', style: 'background-color:#1A91E0' %>
      </div>

      <% end %>
  </div><!--end col-->
</div><!--end row-->
