<div class = "row">
  <div class="col-xs-4 col-xs-offset-4">
    <h1>edit the fields you wish to change</h1>

      <%= form_for @user do |f| %>

      <div class="form-group">
        <%= f.text_field :name, placeholder:"Name goes here..." %>
      </div>
      <div class="form-group">
        <%= f.text_field :email, placeholder:"Email goes here..." %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder:"Password goes here..." %>
      </div>

      <div class="form-group">
        <%= select_tag "user[user_type]", options_for_select(["foodie", "truck owner"]) %>
      </div>

      <div class="form-group">
        <%= f.submit "update me!" %>
      </div>

      <% end %>
  </div><!--end col-->
</div><!--end row-->
